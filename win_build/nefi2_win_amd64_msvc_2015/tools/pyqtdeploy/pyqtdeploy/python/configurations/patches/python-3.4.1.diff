+
+size_t _Py_mbstowcs(wchar_t *pwcs, const char *s, size_t n)
+{
+    size_t room;
+    char ch;
+
+    if (pwcs == NULL)
+        return strlen(s);
+
+    room = n;
+
+    while ((ch = *s++) != '\0' && room > 0)
+    {
+        if (ch <= 0x7f)
+            *pwcs = ch;
+        else
+            *pwcs = 0xdc00 + ch;
+
+        ++pwcs;
+        --room;
+    }
+
+    if (room > 0)
+        *pwcs = 0;
+
+    return n - room;
+}
+
+size_t _Py_wcstombs(char *s, const wchar_t *pwcs, size_t n)
+{
+    size_t room;
+    wchar_t w_ch;
+
+    room = n;
+
+    while ((w_ch = *pwcs++) != 0 && room > 0)
+    {
+        char ch;
+
+        if (w_ch <= 0x7f)
+            ch = (char)w_ch;
+        else if (0xdc80 <= w_ch && w_ch <= 0xcff)
+            ch = (char)(0xdc00 - w_ch);
+        else
+            return (size_t)-1;
+
+        if (s != NULL)
+            *s++ = ch;
+
+        --room;
+    }
+
+    if (s != NULL && room > 0)
+        *s = '\0';
+
+    return n - room;
+}
+#endif
 
 #ifdef __cplusplus
 }
